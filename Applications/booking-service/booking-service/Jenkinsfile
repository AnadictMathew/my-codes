pipeline {
  agent any

  stages {

    stage('Checkout') {
      steps {
        git credentialsId: 'github-creds',
            url: 'https://github.com/AnadictMathew/my-codes.git'
      }
    }

    stage('Build JAR') {
      steps {
        dir('Applications/booking-service/booking-service') {
          sh 'mvn clean package -DskipTests'
        }
      }
    }

    stage('Docker Build') {
      steps {
        dir('Applications/booking-service/booking-service') {
          sh 'docker build -t booking-service:1.0 .'
        }
      }
    }
  }
}