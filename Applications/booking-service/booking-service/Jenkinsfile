pipeline {
  agent any

  environment {
    IMAGE_NAME  = "booking-service"
    AWS_REGION = "ap-south-1"
    ECR_REPO   = "216261470305.dkr.ecr.ap-south-1.amazonaws.com/booking-service"
  }

  stages {

    stage('Checkout') {
      steps {
        git branch: 'main',
            credentialsId: 'github-creds',
            url: 'https://github.com/AnadictMathew/my-codes.git'
      }
    }

    stage('Read Version') {
      steps {
        dir('Applications/booking-service/booking-service') {
          script {
            env.BASE_VERSION = sh(
              script: "mvn help:evaluate -Dexpression=project.version -q -DforceStdout",
              returnStdout: true
            ).trim()

            // Example: 1.0.17
            env.IMAGE_VERSION = "${env.BASE_VERSION}.${env.BUILD_NUMBER}"
          }
        }
      }
    }

    stage('Build JAR') {
      steps {
        dir('Applications/booking-service/booking-service') {
          sh 'mvn clean package -DskipTests'
        }
      }
    }

    stage('Docker Build') {
      steps {
        dir('Applications/booking-service/booking-service') {
          sh """
            docker build -t ${env.IMAGE_NAME}:${env.IMAGE_VERSION} .
            docker tag ${env.IMAGE_NAME}:${env.IMAGE_VERSION} ${env.IMAGE_NAME}:latest
          """
        }
      }
    }

    stage('Login to AWS ECR') {
      steps {
        withAWS(credentials: 'aws-creds', region: "${env.AWS_REGION}") {
          sh """
            aws ecr get-login-password --region ${env.AWS_REGION} \
            | docker login --username AWS --password-stdin 216261470305.dkr.ecr.ap-south-1.amazonaws.com
          """
        }
      }
    }

    stage('Push Image to ECR') {
      steps {
        sh """
          docker tag ${env.IMAGE_NAME}:${env.IMAGE_VERSION} ${env.ECR_REPO}:${env.IMAGE_VERSION}
          docker tag ${env.IMAGE_NAME}:latest ${env.ECR_REPO}:latest

          docker push ${env.ECR_REPO}:${env.IMAGE_VERSION}
          docker push ${env.ECR_REPO}:latest
        """
      }
    }
  }
}